
<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Brand:</b>
  <%= @product.brand %>
</p>

<p>
  <%= image_tag (@product.image_url) %>
</p>

<p>
  <b>Image url:</b>
  <%= @product.image_url %>
</p>

<p>
  <b>Price:</b>
  <%= number_to_currency(@product.price) %>
	&nbsp(<%= @product.portion_size %> <%= @product.unit_of_measure %>)
</p>

<p>
  <b>UPC:</b>
  <%= @product.upc %>
</p>

