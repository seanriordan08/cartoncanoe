
<% if flash[:error] %>
	<div id="cartError"></div>
	<script>
		$('#cartError').hide();
		$('#cartError').append("<%= flash[:error] %>");
		$('#cartError').show("blind", 600);
		
		$('#cartError').click(function() {
		  $('#cartError').hide('blind',300)
		});
	</script>
<% end %>
<% if flash[:alert] %>
	<div id="cartNotice"></div>
	<script>
		$('#cartNotice').hide();
		$('#cartNotice').append("<%= flash[:alert] %>");
		$('#cartNotice').show("blind", 600);
		
		$('#cartNotice').click(function() {
		  $('#cartNotice').hide('blind',300)
		});
	</script>
<% end %>

<div class="cart_title">Your Cart</div>
<table>

 <%=render(cart.line_items) %>

 <tr id="total_line">
  <td colspan="2">Total</td>
  <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
 </tr>
 
</table>
<%= button_to 'Checkout', new_order_path, :method => :get, :remote => true %>
<%= button_to 'Empty Cart', cart, :method => :delete, :data => {:confirm => 'Are you sure?'}%>
<script>cartCover();</script>